<!-- Footer -->
<footer id="footer">
  <div class="footer-title-section">
    <h2>Get In Touch</h2>
  </div>
  <div class="footer-content-wrapper">
    <section class="footer-form-section">
    <form method="post" action="/submitInquiry" id="inquiryForm" novalidate>
      <div class="fields">
        <div class="field">
          <label for="name">Name</label>
          <input
            type="text"
            name="name"
            id="name"
            placeholder="<%= messages.form.placeholders.name %>"
            maxlength="100"
            required
          />
          <div class="error-message" id="nameError"></div>
        </div>
        <div class="field">
          <label for="mobile">Mobile</label>
          <input
            type="text"
            inputmode="numeric"
            name="mobile"
            id="mobile"
            placeholder="<%= messages.form.placeholders.mobile %>"
            maxlength="14"
            pattern="[\d+]+"
            required
          />
          <div class="error-message" id="mobileError"></div>
        </div>
        <div class="field">
          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="<%= messages.form.placeholders.email %>"
            maxlength="30"
            required
          />
          <div class="error-message" id="emailError"></div>
        </div>
        <div class="field">
          <label for="message">Message</label>
          <textarea
            name="message"
            id="message"
            rows="3"
            maxlength="2000"
            placeholder="<%= messages.form.placeholders.message %>"
            required
          ></textarea>
          <div class="error-message" id="messageError"></div>
        </div>
      </div>
      <ul class="actions">
        <li><input type="submit" value="<%= messages.form.buttons.submit %>" id="submitBtn" /></li>
      </ul>
    </form>
    <h5 id="responseMessage"></h5>
  </section>
  <section class="split contact footer-contact-section">
    <section class="alt">
      <h3>Address</h3>
      <p>
        Ad Difaf St. - Al Reem Island <br />
        Abu Dhabi - UAE <br />
        P.O. Box 109240
      </p>
    </section>
    <section>
      <h3>Phone</h3>
      <p><a href="javascript:void(0)">(+971) 0502878009</a></p>
    </section>
    <section>
      <h3>Email</h3>
      <p><a href="mailto:info@nexusplater.com">info@nexusplater.com</a></p>
    </section>
    <section>
      <h3>Social</h3>
      <ul class="icons alt">
        <li>
          <a
            href="https://wa.me/message/KFVWSJUR56XYJ1"
            target="_blank"
            class="icon brands alt fa-whatsapp"
            ><span class="label">WhatsApp</span></a
          >
        </li>
        <li>
          <a
            href="https://www.facebook.com/nexusplater"
            target="_blank"
            class="icon brands alt fa-facebook-f"
            ><span class="label">Facebook</span></a
          >
        </li>
        <li>
          <a
            href="https://www.instagram.com/nexusplater"
            target="_blank"
            class="icon brands alt fa-instagram"
            ><span class="label">Instagram</span></a
          >
        </li>
        <li>
          <a
            href="https://www.linkedin.com/in/nexusplater"
            target="_blank"
            class="icon brands alt fa-linkedin"
